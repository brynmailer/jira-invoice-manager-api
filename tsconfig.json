{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    "lib": [ "es2016", "es2017", "esnext.asyncIterable" ],
    "moduleResolution": "node",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": "src"
  },
  "exclude": [ "node_modules", "./src/resolvers/*.test.ts" ],
  "include": [ "./src/**/*.ts" ]
}
